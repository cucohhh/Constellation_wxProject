  height:100vh;  
  z-index:1;
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* border:2px red solid; */

}
.container_center{
  width:90%;
  height:90%;
  /* border:2px solid red; */
  z-index: 1;
  background-color: rgba(223, 210, 210, 0.5);
 
  border-radius: 8%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  opacity: 0;

}
.center_top{
  margin-bottom: 15%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width:90%;
  height:20%;
  background-color: rgba(223, 210, 210, 0);
}
.center_bottom{
  width:80%;
  height:40%;
  margin-top:rpx;
  background-color: rgba(223, 210, 210, 0);
  display: flex;
  flex-direction:column;
  justify-content: space-between;
  align-items: center;
  
}

.button{
  width:100%;
  /* border:2px solid red; */
  
  background-color: blueviolet;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: rgb(54, 49, 49);
}
.logo_part{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width:80%;
  height:40%;
  margin-bottom: 25vh;
  opacity: 0;
  /* border:1px solid red; */
}
.logo_part image{
  width:40%;
  height:60%;
  margin-top: 0vh;
}
.input_part{
  display:flex;
  flex-direction: column;
  width:100%;
  height:140%;
  justify-content: space-between;
  align-items: center;
  opacity: 1;
  /* border:1px solid red; */
  z-index:1;
  
}
.slide_up_part{
  width:80%;
  height:40%;
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /* border:1px solid red; */
}