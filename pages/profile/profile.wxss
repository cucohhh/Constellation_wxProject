/* pages/profile/profile.wxss */
.all_container{
  display: flex;
  flex-direction: column;
  width:100vw;
  height:100vh;
  justify-content: center;
  align-items: center;
}

.top_container{
  display: flex;
  flex-direction: column;
  width:100%;
  height:25%;
  /* border:2px solid blue; */
  justify-content: center;
  align-items: center;
  
  z-index: 99;
}

.bottom_container{
  display: flex;
  flex-direction: column;
  width:100%;
  height:70%;
  
  /* justify-content: center; */
  align-items: center;
  background-color:#F9F9F9; 
   
}

.upper_part{
  margin-top: 5%;
  width:90%;
  height:50%;
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  
}

.lower_part{
  margin-top: 4%;
  width:75%;
  height:35%;
  display:flex;
  flex-direction: column;
  
}

.personal_info{
  margin-top: 2vh;
  display:flex;
  flex-direction: row;
  justify-content: center;
  width:80%;
  height: 80%;
  
}

.text_info{
  width:60%;
  height:100%;
  margin-left: 5%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  
}
.constellatioin_part{
  width:90%;
  height:60%;

  margin:2%;
  /* background-color: #FFFFFF; */
}
.fortune_part{
  width:90%;
  height:40%;
  
}
.constellation_content{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top:5%;
  width:100%;
  height:70%;
  /* border:1px solid orange; */
  border-radius: 15px;
  box-shadow: 10px 10px 5px -1px #968f96db;
  background-color: #FFFFFF
  
}
.fortune_content{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top:5%;
  width:100%;
  height:70%;
  /* border:1px solid orange; */
  border-radius: 15px;
  box-shadow: 10px 10px 5px -1px #968f96db;
  background-color: #FFFFFF
}
.birthday_text{
  background: linear-gradient(to right, #F5696E, #7156E8);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;



}

